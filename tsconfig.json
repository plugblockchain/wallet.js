{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "build",
        "baseUrl": ".",
        "types": ["node", "jest"],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2017"],
        "emitDecoratorMetadata": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "paths": {
            "@plugnet/wallet/*": ["packages/wallet/src/*"],
            "@plugnet/wallet": ["packages/wallet/src/index"]
        }
    },
    "include": ["packages/**/*", "scripts/*.ts"],
    "exclude": ["**/node_modules/**"]
}
